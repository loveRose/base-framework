<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:id="@+id/btn_simple_layout_1"
            android:layout_width="match_parent"
            android:text="简单布局1"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_multiple_layout_1"
            android:layout_width="match_parent"
            android:text="多类型布局1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_simple_layout_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_multiple_layout_2"
            android:layout_width="match_parent"
            android:text="多类型布局2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_multiple_layout_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_layout_demo"
            android:layout_width="match_parent"
            android:text="效果示例"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_multiple_layout_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>