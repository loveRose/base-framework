<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".base.BaseTestActivity">

    <Button android:id="@+id/btn_test_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="适配器测试"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button android:id="@+id/btn_test_mvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MVP流程测试"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_test_recycler"
    />
    <Button android:id="@+id/btn_test_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他测试"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_test_mvp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>