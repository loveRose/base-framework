<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".base.mvp.MvpMainActivity">

    <Button android:id="@+id/btn_send_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:text="模拟发起网络请求"/>

    <Button android:id="@+id/btn_send_error_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_send_network"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:text="模拟发起错误网络请求"/>

    <Button android:id="@+id/btn_send_close_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_send_error_network"
            android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:text="发起网络请求并立即关闭当前页面"/>

    <Button android:id="@+id/btn_more_presenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_send_close_network"
            android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:text="支持多个Presenter引入"/>

    <Button android:id="@+id/btn_more_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_more_presenter"
            android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:text="支持多个Model引入"/>

    <TextView android:id="@+id/tv_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/btn_more_model"/>


</androidx.constraintlayout.widget.ConstraintLayout>